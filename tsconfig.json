{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "jsx": "react",
    "experimentalDecorators": true,
    "strict": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "lib": ["dom", "es2015", "es2016", "es2017"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "server.ts"]
}
